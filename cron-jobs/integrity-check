#!/bin/bash

basedir="$(dirname $0)"

if [ $# -ne 3 ]; then
    echo "usage: $(basename $0) <repo>[,<repo>,...] <arch> <mailto>" >2
    exit 1
fi

$basedir/cron-jobs/check_archlinux/check_packages.py \
    --repos="$1" \
    --abs-tree="/srv/abs/rsync/$2" --arch="$1" |\
    $basedir/cron-jobs/devlist-mailer \
    "Integrity Check $2: $1" "$3"
